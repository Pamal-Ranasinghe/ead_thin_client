<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ConsumerSignUp">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editTextConsumerSignUpVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/grey_edt_background"
                android:ems="10"
                android:hint="Vehicle Number"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="#636363"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextConsumerSignUpVehicleType"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/grey_edt_background"
                android:ems="10"
                android:hint="Vehicle Type"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="#636363"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextConsumerSignUpFuelType"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/grey_edt_background"
                android:ems="10"
                android:hint="Fuel Type"
                android:inputType="text"
                android:padding="16dp"
                android:textColorHint="#636363"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextConsumerSignUpPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/grey_edt_background"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColorHint="#636363"
                android:textSize="18sp" />

<!--            <EditText-->
<!--                android:id="@+id/editTextTextPassword2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="55dp"-->
<!--                android:layout_marginStart="32dp"-->
<!--                android:layout_marginTop="24dp"-->
<!--                android:layout_marginEnd="32dp"-->

<!--                android:background="@drawable/grey_edt_background"-->
